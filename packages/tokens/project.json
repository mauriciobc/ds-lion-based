{
  "name": "tokens",
  "sourceRoot": "packages/tokens/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "options": {
        "command": "style-dictionary build --config style-dictionary.config.js",
        "cwd": "packages/tokens"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "style-dictionary build --watch",
        "cwd": "packages/tokens"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rimraf dist",
        "cwd": "packages/tokens"
      }
    }
  },
  "tags": ["scope:tokens", "type:library"]
}
