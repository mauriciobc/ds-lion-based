{
  "name": "ds-lion-based",
  "version": "0.0.0",
  "private": true,
  "description": "Design System baseado em Lion Web Components com pipeline Figma-to-Code",
  "scripts": {
    "build": "nx run-many --target=build --all",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "dev": "nx run-many --target=dev --all",
    "storybook": "nx run docs:storybook",
    "build-storybook": "nx run docs:build-storybook",
    "build:tokens": "pnpm --filter @ds/tokens build",
    "build:core": "pnpm --filter @ds/core build",
    "build:react": "pnpm --filter @ds/react build",
    "build:vue": "pnpm --filter @ds/vue build",
    "build:angular": "pnpm --filter @ds/angular build",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@nx/eslint-plugin": "^21.6.5",
    "@nx/js": "^21.6.5",
    "@nx/workspace": "^21.6.5",
    "nx": "^21.6.5",
    "typescript": "~5.6.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@9.15.0"
